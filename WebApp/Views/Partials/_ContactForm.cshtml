@model ContactFormViewModel


<form asp-action="Index" asp-controller="Contacts" method="post" novalidate>
    <div asp-validation-summary=ModelOnly class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" onkeyup="validateText(event)" />
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" onkeyup="validateEmail(event)" />
        <span asp-validation-for="Email" class="small text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Message" class="form-label">Message</label>
        <textarea asp-for="Message" class="form-control" onkeyup="validateText(event)"></textarea> 
        <span asp-validation-for="Message" class="small text-danger"></span>
    </div>
  

    <div class="d-grid">
        <button type="submit" class="btn-success">SUBMIT</button>
    </div>
</form>
